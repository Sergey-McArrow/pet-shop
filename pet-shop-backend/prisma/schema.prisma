generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model categories {
  id        Int      @id @default(autoincrement())
  title     String
  image     String
}

model products {
  id                Int      @id @default(autoincrement())
  title             String
  price             Int
  discount_price    Int? 
  image             String
}